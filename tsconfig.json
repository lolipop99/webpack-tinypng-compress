{
    "compilerOptions": {
        "declaration": false,
        
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        
        "noEmitOnError": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": false,
        
        "outDir": "./dist",
        
        "lib": [
            "es2015",
            "dom",
            "es2015.promise",
            "es2015.generator",
            "es2015.symbol"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
        "!node_modules/**",
        "!test/**"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}